<div id="container">
	<div id="content">
		<div class="grid_10">
			<h2>
			<%= t("registration_header") %>
			</h2>
			<%= form_for(resource,:as=>resource_name,:url=>registration_path(resource_name)) do |f| %><%= devise_error_messages! %>
					<fieldset>
						<legend><%= t("login_legend") %></legend>
							<div class="row">
									<%= f.label(:email,:class=>"form-label mandatory")%><%= f.email_field(:email,:class=>"wide-textbox") %>
								</div><!-- /.row -->
								<div class="row">
									<%= f.label(:password,:class=>"form-label mandatory") %><%= f.password_field(:password,:class=>"wide-textbox") %>
								</div><!-- /.row -->
								<div class="row">
									<%= f.label(:password_confirmation,:class=>"form-label mandatory") %><%= f.password_field(:password_confirmation,:class=>"wide-textbox") %>
								</div><!-- /.row -->
						</fieldset>
						<fieldset>
							<legend><%= t("personal_info_legend") %></legend>
								<div class="row">
									<%= f.label(:first_name,:class=>"form-label mandatory") %><%= f.text_field(:first_name,:class=>"wide-textbox") %>
								</div>
								<div class="row">
									<%= f.label(:last_name,:class=>"form-label mandatory") %><%= f.text_field(:last_name,:class=>"wide-textbox") %>
								</div><!-- /.row -->
								<div class="row">
									<%= f.label(:contact_number,:class=>"form-label mandatory") %><%= f.phone_field(:contact_number,:class=>"wide-textbox") %>
								</div><!-- /.row -->
								<div class="row">
									<%= f.label(:school,:class=>"form-label mandatory") %><%= f.text_field(:school,:class=>"wide-textbox") %>
								</div><!-- /.row -->
								<div class="row"><%= f.label(:country,:class=>"form-label mandatory") %>
 									<%= f.select(:country, [
									  [t("China"),"China"],
									  [t("Hongkong"),"Hong Kong"],
									  [t("Malaysia"),"Malaysia"],
									  [t("Singapore"),"Singapore"],
									  [t("Taiwan"),"Taiwan"],
									  ],{:include_blank => true, :default => nil},:style=>"font-family: Arial Unicode MS;") %>
								</div><!-- /.row -->
								<div class="row"><%= f.label(:language,:class=>"form-label mandatory") %>
									 <%= f.select(:language, [
									  [t("English"),"en-US"],
									  [t("Simplified_Chinese"),"zh-CN"],
									  [t("Traditional_Chinese"),"zh-TW"],
									  ],{:selected => params[:locale]},:style=>"font-family: Arial Unicode MS;") %>
								</div><!-- /.row -->
								<div class="row">
									<%= f.label(:lecturer_name,:class=>"form-label") %><%= f.text_field(:lecturer_name,:class=>"wide-textbox") %>
								</div>
								<div class="row">
									<%= f.label(:lecturer_email,:class=>"form-label") %><%= f.text_field(:lecturer_email,:class=>"wide-textbox") %>
								</div>
									 <%= add_recaptcha_tag %>
						</fieldset>
						<div class="row">
						<%= f.check_box(:terms,:class=>"remember-me-checkbox")%>
						<%= f.label(:terms,t('tos'),:class=>"remember-me")%>
						</div><!-- /.row -->
						<div class="row">
							<%= f.submit(:value=>t('submit'),:class =>"large blue awesome",:disable_with =>t('submitting')) %>
						</div><!-- /.row -->
						<div class="row">
							<span class="forgot-password">
								<%= link_to t("back_to_sign_in"), new_session_path(resource_name) %>
							</span>
						</div><!-- /.row -->
					<% end %>
		</div><!-- /.grid-5 -->
	</div><!-- /#content -->
</div><!-- /container -->
