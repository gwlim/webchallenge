<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %><p class="h2"></p>
	<div class ="row">
		<%= f.label(:email,:class=>"form-label")%>
		<%= f.email_field(:email,:class=>"wide-textbox")%>
	</div>
	<div class ="row">
		<%= f.label(:password,:class=>"form-label")%>
		<%= f.password_field(:password,:autocomplete => "off",:class =>"wide-textbox")%>
	</div>
		<% if devise_mapping.rememberable? -%>
	<div class ="row">
		<%= f.check_box(:remember_me,:class=>"remember-me-checkbox")%><%= f.label(:remember_me,t('remember_me'),:class=>"remember-me")%>
	</div>
	<% end -%>
	<div class="row">
		<%= f.submit(:value=>t('sign_in'),:class=>"large blue awesome",:disable_with =>t('signing_in'))%>
	</div>
	<% end %>
		<div class="signup-message">
		<span>
		<%= t('white_list').html_safe %>
		</span>
		</div>
	<div class="row">
		<span class="forgot-password">
			<%= link_to(t("forgot_password_href"), new_password_path(resource_name)) %><br />
			<%= link_to(t("confirmation_email_href"), new_confirmation_path(resource_name))%><br />

		</span>
	</div><!-- /.row -->
	<div class="row">
		<%= render :partial=> "layouts/localechange" %>
	</div>

